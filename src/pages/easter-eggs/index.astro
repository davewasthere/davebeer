<script>
    let currentSlide = 0;
    const totalSlides = 5; // Update this if the number of cards changes

    document.addEventListener('DOMContentLoaded', () => {
        const prevButton = document.getElementById('prev-button');
        const nextButton = document.getElementById('next-button');

        prevButton.addEventListener('click', () => {
            showSlide((currentSlide - 1 + totalSlides) % totalSlides);
        });

        nextButton.addEventListener('click', () => {
            showSlide((currentSlide + 1) % totalSlides);
        });

        function showSlide(index) {
            document.getElementById(`card-${currentSlide}`).style.display = 'none';
            currentSlide = index;
            document.getElementById(`card-${currentSlide}`).style.display = 'block';
        }
    });









</script>

<style>
	body {
		margin: 0;
		background-color: #f0f0f0; /* Light background for better contrast */
	}
    .slideshow {
        position: relative;
        overflow: hidden;
        width: 100%;
        height: 100vh; /* Full viewport height */
        margin: auto;
